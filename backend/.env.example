# Environment Variables for Webbeezwork Backend
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development
WEBSITE_URL=https://webbeezwork-pearl.vercel.app

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Company Email Settings
COMPANY_EMAIL=your-company-email@gmail.com
COMPANY_NAME=Your Company Name

# Frontend URLs (for CORS) - Multiple environments
FRONTEND_URL_LOCAL=http://localhost:8080
FRONTEND_URL_PRODUCTION=https://webbeezwork-pearl.vercel.app

# Rate Limiting
MAX_REQUESTS_PER_HOUR=10
